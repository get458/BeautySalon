<Page x:Class="BeautySalon.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Style="{StaticResource DefayltPage}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Image Source="Resources/Logo.png" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="100,0,100,0">
            <TextBlock Margin="5" Text="Логин"></TextBlock>
            <TextBox Margin="5" Text="Admin" x:Name="TxtLogin"></TextBox>
            <TextBlock Margin="5" Text="Пароль"></TextBlock>
            <PasswordBox Margin="5" Password="Admon" x:Name="TxtPass"></PasswordBox>
            <Button Margin="50" x:Name="BtnAuth" Content="Войти" Click="BtnAuth_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
