<Page x:Class="BeautySalon.WorkOfClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление клиента" Style="{StaticResource DefayltPage}">

    <Grid>
        <StackPanel Margin="150,0,150,0" VerticalAlignment="Center">
            <StackPanel x:Name="PersonData">
                <TextBlock Text="Фамилия" Margin="5"></TextBlock>
                <TextBox Text="{Binding LastName}" Margin="5"></TextBox>

                <TextBlock Text="Имя" Margin="5"></TextBlock>
                <TextBox Text="{Binding Name}" Margin="5"></TextBox>

                <TextBlock Text="Отчество" Margin="5"></TextBlock>
                <TextBox Text="{Binding MiddleName}" Margin="5"></TextBox>
            </StackPanel>
            <TextBlock Text="Телефон" Margin="5"></TextBlock>
            <TextBox Text="{Binding Phone}" Margin="5"></TextBox>
            <Button x:Name="BtnAddOrEditClient" Width="200" Click="BtnAddOrEditClient_Click">Добавить</Button>
        </StackPanel>
    </Grid>
</Page>
