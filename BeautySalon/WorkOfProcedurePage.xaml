<Page x:Class="BeautySalon.WorkOfProcedurePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление процедуры" Style="{StaticResource DefayltPage}">

    <Grid>
        <StackPanel Margin="150,0,150,0" VerticalAlignment="Center">
            <TextBlock Text="Название" Margin="5"></TextBlock>
            <TextBox Text="{Binding ProceduresName}" Margin="5"></TextBox>

            <TextBlock Text="Имя" Margin="5"></TextBlock>
            <TextBox Text="{Binding Cost}" Margin="5"></TextBox>
            
            <Button x:Name="BtnAddOrEditProcedure" Width="200" Click="BtnAddOrEditProcedure_Click">Добавить</Button>
        </StackPanel>
    </Grid>
</Page>
